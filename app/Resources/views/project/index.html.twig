{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/jquery.dataTables.min.css') }}">
    <script src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/projectjs.js') }}"></script>
{% endblock %}
{% block body %}
    <h1>Projects list</h1>

    <table>
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Cr√©ateur</th>
                <th>Creationdate</th>
                <th>Limitedate</th>
                <th>Enddate</th>
                <th>Idproject</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a href="{{ path('project_show', { 'idproject': project.idproject }) }}">{{ project.libelle }}</a></td>
                <td>{{ project.master }}</td>
                <td>{% if project.creationdate %}{{ project.creationdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if project.limitedate %}{{ project.limitedate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if project.enddate %}{{ project.enddate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ project.idproject }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('project_show', { 'idproject': project.idproject }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('project_edit', { 'idproject': project.idproject }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('project_new') }}">Create a new project</a>
        </li>
    </ul>
{% endblock %}
